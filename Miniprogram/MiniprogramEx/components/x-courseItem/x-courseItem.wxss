/* components/x-courseItem/x-courseItem.wxss */
.courseItem {
  height: 100px;
  border-bottom: 5px solid red;
  display: flex;
}

.courseItem .post {
   width: 140px;
   height: 80px;
   background-color: blue;
   margin: 10px;
}
.courseItem .post image {
  width: 100%;
  height: 100%;
}
.courseItem .desc {
  background-color: cyan;
  flex: 1;
  padding: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.courseItem .desc text {
  font-size: 13px;  
}
.courseItem .desc .courseTitle {
  font-size: 15px;
  font-weight: bold;
}
.courseItem .desc .courseTeacher {
  color: gray;
}
.courseItem .desc .courseStudentnumb {
  color: red;
}